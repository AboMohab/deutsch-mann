<div class="main_sign">
  <div class="container">
    <div class="row">
      <div class="col-xs-3">&nbsp;</div>
      
      <div class="col-xs-6 forms">
    <%= form_for (@new_signup) do |f| %>
    
    <div class="fields">
      <h4>First name</h4>
      <%= f.text_field :firstname ,{:class => "field"} %>
      <h4>Email</h4>
        <%= f.text_field :email ,{:class => "field"}  %>
      <br>
      <%= f.submit "Join" ,class:'buttn' %>
    </div>                      
    <%end%>
  </div>

  <div class="col-xs-3">&nbsp;</div>
</div>
  </div>
</div>